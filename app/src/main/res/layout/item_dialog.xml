<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_corners_dialog"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corners_dialog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corners_dialog"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="File Name"
                android:textColor="#000000"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tvShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:padding="16dp"
                android:text="Chia sẻ"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:padding="16dp"
                android:text="Xóa"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:padding="16dp"
                android:text="Đổi tên"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:padding="16dp"
                android:text="Di chuyển"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:padding="16dp"
                android:text="Sao chép"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPaste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:padding="16dp"
                android:text="Dán"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item"
                android:padding="16dp"
                android:text="Thêm vào d.s yêu thích"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvProperties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_item_properties"
                android:padding="16dp"
                android:text="Thuộc tính"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>